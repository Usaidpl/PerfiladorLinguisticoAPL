<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".view.espanol.Interaccion">

    <!-- inicio -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="750dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. Cholaj uch'ob'ik tzijob'al / Interacción Oral"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/tvInstrucionComprende"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utz Tzalim tzij"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"
                android:id="@+id/tvRespuestaComprende"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respuesta Correcta"
                android:textSize="45dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <!-- end title -->

    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="75dp"
            android:paddingRight="75dp">
            <!-- 1 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_margin="5sp"
                    android:background="@xml/border2"
                    android:gravity="center">

                    <Button
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="35dp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:background="@xml/redondeado"
                        android:fadingEdgeLength="@dimen/_100sdp"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:padding="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Jas ab'i' / su ri ab 'i'?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#000"
                        android:id="@+id/tvPreguntaUnoComprende"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta11"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta12"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="545dp"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_margin="5sp"
                    android:background="@xml/border2">
                    <Button
                        android:layout_width="27dp"
                        android:layout_height="11dp"
                        android:text="2"
                        android:textSize="35dp"
                        android:gravity="center"
                        android:background="@xml/redondeado"
                        android:fadingEdgeLength="@dimen/_100sdp"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:padding="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Janipa ajunab?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#000"
                        android:id="@+id/tvPreguntaDosComprende"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta13"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta14"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- 3 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_margin="5sp"
                    android:background="@xml/border2">
                    <Button
                        android:layout_width="39dp"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="35dp"
                        android:gravity="center"
                        android:background="@xml/redondeado"
                        android:fadingEdgeLength="@dimen/_100sdp"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:padding="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¿Jas / su ub'i' ri anam?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#000"
                        android:id="@+id/tvPreguntaTresComprende"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta15"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta16"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:padding="13sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_margin="5sp"
                    android:background="@xml/border2">
                    <Button
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:text="4"
                        android:textSize="35dp"
                        android:gravity="center"
                        android:background="@xml/redondeado"
                        android:fadingEdgeLength="@dimen/_100sdp"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:padding="20dp"
                        android:layout_width="244dp"
                        android:layout_height="wrap_content"
                        android:text="¿Jachike?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#000"
                        android:id="@+id/tvPreguntaCuatroComprende"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta17"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta18"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="90dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_margin="5sp"
                    android:background="@xml/border2">
                    <Button
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:text="5"
                        android:textSize="40dp"
                        android:gravity="center"
                        android:background="@xml/redondeado"
                        android:fadingEdgeLength="@dimen/_100sdp"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:padding="20dp"
                        android:layout_width="252dp"
                        android:layout_height="wrap_content"
                        android:text="¿Jas ab&apos;i&apos; ?"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="#000"
                        android:id="@+id/tvPreguntaCincoComprende"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta19"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta20"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
    <!-- fin -->

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.mam.SonidosEspecificosMam">
    <TextView
        android:id="@+id/tvSonidosEspecificosMamTitulo"
        android:layout_width="700dp"
        android:layout_height="50dp"
        android:layout_x="190dp"
        android:layout_y="25dp"
        android:background="#B71C1C"
        android:gravity="center"
        android:text="Titulo Nombre"
        android:textColor="#ffffffff"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvSonidosEspecificosMam"
        android:layout_width="700dp"
        android:layout_height="350dp"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        android:layout_x="190dp"
        android:layout_y="110dp">
        <AbsoluteLayout
            android:id="@+id/alSonidosEspecificosMam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSonidosEspecificosMamNumero"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="0"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_x="20dp"
                android:layout_y="10dp"
                android:textStyle="bold"
                android:background="@xml/redondeado"
                android:textColor="#ffffffff"
                android:gravity="top|bottom|center_horizontal" />

            <TextView
                android:id="@+id/tvSonidosEspecificosMamRespuestaSwitch"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_x="540dp"
                android:layout_y="10dp"
                android:text="Respuesta"/>

            <ImageView
                android:id="@+id/ivSonidosEspecificosMam"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/logolea"
                android:layout_x="234dp"
                android:layout_y="20dp" />

            <Switch
                android:id="@+id/swSonidosEspecificosMam"
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_x="25dp"
                android:layout_y="250dp"/>

            <RadioGroup
                android:id="@+id/rgSonidosEspecificosMam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_x="485dp"
                android:layout_y="250dp">

                <RadioButton
                    android:id="@+id/rbSonidosEspecificosMamSi"
                    android:layout_width="81dp"
                    android:layout_height="wrap_content"
                    android:layout_column="31"
                    android:text="SI"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbSonidosEspecificosMamNo"
                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_column="33"
                    android:text="NO"
                    android:textStyle="bold" />

            </RadioGroup>
        </AbsoluteLayout>
    </android.support.v7.widget.CardView>

</AbsoluteLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".view.espanol.Interactua">

    <!-- inicio -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I. Cholaj uch'ob'ik tzijob'al / Interacción Oral"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:id="@+id/tvInstrucionInteractua"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utz Tzalim tzij"
                android:textSize="@dimen/_11sdp"
                android:gravity="center"
                android:id="@+id/tvRespuestaInteractua"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Respuesta Correcta"
                android:textSize="45dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <!-- end title -->
    
    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="75dp"
            android:paddingRight="75dp">
            <!-- 1 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@xml/border2">
                <LinearLayout
                    style="@style/linerLayout">

                    <Button
                        android:text="1"
                        style="@style/imagebutton"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        style="@style/textView"
                        android:text="¿Jas ab'i' / su ri ab 'i'?"
                        android:id="@+id/tvPreguntaUnoInteractua"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta1"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta2"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    style="@style/linerLayout">
                    <Button
                        style="@style/imagebutton"
                        android:text="2"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="¿Janipa ajunab?"
                        style="@style/textView"
                        android:id="@+id/tvPreguntaDosInteractua"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta3"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta4"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- 3 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    style="@style/linerLayout">
                    <Button
                        style="@style/imagebutton"
                        android:text="3"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="¿Jas / su ub'i' ri anam?"
                        style="@style/textView"
                        android:id="@+id/tvPreguntaTresInteractua"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta5"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta6"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="13sp">
                <LinearLayout
                    style="@style/linerLayout">
                    <Button
                        style="@style/imagebutton"
                        android:text="4"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:text="¿Jachike rikil utz kana' ututijik?"
                        style="@style/textView"
                        android:id="@+id/tvPreguntaCuatroInteractua"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta7"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta8"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    style="@style/linerLayout">
                    <Button
                        style="@style/imagebutton"
                        android:text="5"/>
                    <Space
                        android:layout_width="35dp"
                        android:layout_height="50dp" />
                    <TextView
                        android:padding="20dp"
                        android:layout_width="830dp"
                        android:layout_height="wrap_content"
                        android:text="¿Jas ab'i' / su ri ab 'i'?"
                        android:textSize="@dimen/_11sdp"

                        android:id="@+id/tvPreguntaCincoInteractua"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="si"
                                android:id="@+id/rbRespuesta9"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="no"
                                android:id="@+id/rbRespuesta10"/>
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
    <!-- fin -->

</LinearLayout>
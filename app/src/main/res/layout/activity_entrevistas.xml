<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gt.lea.usaid.perfiladorlinguistico"
    android:background="#eceff1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/txt1"
        android:textColor="#ff000000"
        android:layout_x="5dp"
        android:layout_y="110dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargo"
        android:id="@+id/txt2"
        android:textColor="#ff000000"
        android:layout_below="@+id/et_nombre"
        android:layout_alignParentStart="true"
        android:layout_x="5dp"
        android:layout_y="148dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/et_nombre"
        android:background="#ffffffff"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:layout_x="95dp"
        android:layout_y="110dp" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/bt_guardar"
        android:background="#B71C1C"
        android:layout_marginBottom="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/et_fecha"
        android:layout_x="110dp"
        android:layout_y="330dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Mostrar"
        android:id="@+id/bt_mostrar"
        android:background="#B71C1C"
        android:layout_alignTop="@+id/bt_guardar"
        android:layout_alignEnd="@+id/et_fecha"
        android:layout_x="561dp"
        android:layout_y="330dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:id="@+id/textView"
        android:textColor="#ff000000"
        android:layout_above="@+id/et_fecha"
        android:layout_alignStart="@+id/et_fecha"
        android:layout_x="445dp"
        android:layout_y="240dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/et_fecha"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/et_nombre"
        android:layout_toEndOf="@+id/et_codigo"
        android:layout_marginStart="69dp"
        android:layout_x="546dp"
        android:layout_y="198dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escuela"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:layout_above="@+id/et_escuela"
        android:layout_alignEnd="@+id/txt1"
        android:layout_x="5dp"
        android:layout_y="194dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/et_escuela"
        android:background="#ffffffff"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:layout_x="95dp"
        android:layout_y="198dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo Escuela"
        android:id="@+id/textView3"
        android:textColor="#ff000000"
        android:layout_above="@+id/et_codigo"
        android:layout_alignParentStart="true"
        android:layout_x="5dp"
        android:layout_y="240dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="195dp"
        android:layout_height="30dp"
        android:id="@+id/et_codigo"
        android:background="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/et_municipio"
        android:layout_x="205dp"
        android:layout_y="240dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Municipio"
        android:id="@+id/textView4"
        android:textColor="#ff000000"
        android:layout_above="@+id/et_municipio"
        android:layout_alignParentStart="true"
        android:layout_x="445dp"
        android:layout_y="110dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/et_municipio"
        android:background="#ffffffff"
        android:layout_above="@+id/textView5"
        android:layout_alignStart="@+id/et_departamento"
        android:layout_x="546dp"
        android:layout_y="110dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departamento"
        android:id="@+id/textView5"
        android:textColor="#ff000000"
        android:layout_above="@+id/et_departamento"
        android:layout_alignParentStart="true"
        android:layout_x="445dp"
        android:layout_y="148dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/et_departamento"
        android:background="#ffffffff"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_x="592dp"
        android:layout_y="152dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciclo"
        android:id="@+id/textView6"
        android:textColor="#ff000000"
        android:layout_above="@+id/et_ciclo"
        android:layout_alignParentStart="true"
        android:layout_x="445dp"
        android:layout_y="194dp"
        android:textStyle="bold"
        android:textSize="18dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/et_ciclo"
        android:background="#ffffffff"
        android:layout_alignTop="@+id/bt_guardar"
        android:layout_alignParentStart="true"
        android:layout_x="546dp"
        android:layout_y="240dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:id="@+id/et_cargo"
        android:background="#ffffffff"
        android:layout_below="@+id/txt2"
        android:layout_alignParentStart="true"
        android:layout_x="95dp"
        android:layout_y="152dp" />

    <TextView
        android:layout_width="845dp"
        android:layout_height="50dp"
        android:text="Perfil de Entrevistador"
        android:id="@+id/textView7"
        android:layout_x="10dp"
        android:layout_y="25dp"
        android:background="#B71C1C"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center_vertical" />

</AbsoluteLayout>

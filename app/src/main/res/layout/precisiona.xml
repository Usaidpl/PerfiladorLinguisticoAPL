<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewFlipper
        android:layout_width="1285dp"
        android:layout_height="match_parent"
        android:id="@+id/flipper">
        <!-- uno -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="Pato"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:src="@mipmap/pollito"
                    android:layout_weight="1"
                    android:id="@+id/ivPoll"/>
                <Space
                    android:layout_width="25dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivPat"
                    android:layout_weight="1"
                    android:src="@mipmap/pato"/>
                <Space
                    android:layout_width="25dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:padding="20dp"
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivPav"
                    android:layout_weight="1"
                    android:src="@mipmap/pavo"/>
            </LinearLayout>

        </LinearLayout>
        <!-- fin uno -->
        <!-- dos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gato"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:src="@mipmap/perro"
                    android:id="@+id/ivPerr"/>


                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivCon"
                    android:src="@mipmap/conejo"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivGat"
                    android:src="@mipmap/gato"/>
            </LinearLayout>

        </LinearLayout>
        <!-- fin uno -->
        <!-- tres -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vaca"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:src="@mipmap/caballlo"
                    android:id="@+id/ivCaball"/>


                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivOvej"
                    android:src="@mipmap/oveja"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivVac"
                    android:src="@mipmap/vaca"/>
            </LinearLayout>

        </LinearLayout>
        <!-- fin uno -->
        <!-- cuatro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Árbol"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:src="@mipmap/arbol"
                    android:id="@+id/ivArb"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivRosa"
                    android:src="@mipmap/rosa"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivMazorca"
                    android:src="@mipmap/milpa"/>
            </LinearLayout>

        </LinearLayout>
        <!-- fin uno -->
        <!-- cinco -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elote"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:src="@mipmap/ejote"
                    android:id="@+id/ivEjote"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivElet"
                    android:src="@mipmap/elote"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivCalaza"
                    android:src="@mipmap/ayote"/>
            </LinearLayout>

        </LinearLayout>
        <!-- fin uno -->
        <!-- seis -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banano"
                android:textSize="@dimen/_13sdp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:src="@mipmap/elote"
                    android:id="@+id/ivElo"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivZona"
                    android:src="@mipmap/zanahoria"/>

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="450dp"
                    android:id="@+id/ivBanano"
                    android:src="@mipmap/banano"/>
            </LinearLayout>

        </LinearLayout>
        <!-- fin uno -->
    </ViewFlipper>

</LinearLayout>